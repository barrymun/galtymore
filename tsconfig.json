{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./types"],
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "types/index.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
}
